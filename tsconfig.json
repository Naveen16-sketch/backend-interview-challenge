{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],                         // ðŸ‘ˆ Fixes 'console' and 'process' errors
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node",                // ðŸ‘ˆ uppercase 'Node' is important
    "allowJs": true,
    "noUnusedLocals": false,                   // ðŸ‘ˆ disable to avoid build failing on unused vars
    "noUnusedParameters": false,               // ðŸ‘ˆ disable same reason
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["node", "express", "cors"]       // ðŸ‘ˆ ensures Node, Express, Cors are included
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "tests"]
}
